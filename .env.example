# ==================================================
# Database (local Docker Postgres)
# ==================================================
DATABASE_URL=postgresql://meadtools:meadtools@localhost:54329/meadtools_dev

# ==================================================
# App base URL (used by server-side API calls)
# ==================================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ==================================================
# Database seeding (dev only)
# ==================================================
# These users are created when running the seed script
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=meadtools_admin

# Must be different from ADMIN_EMAIL
USER_EMAIL=user@example.com
USER_PASSWORD=meadtools_user

# ==================================================
# Email (contact form / notifications)
# ==================================================
# Optional for dev; leave blank if not testing email
EMAIL_USER=
EMAIL_PASS=

# ==================================================
# Custom Auth (required)
# ==================================================
# Generate strong random values for real use
ACCESS_TOKEN_SECRET=dev_access_token_secret
REFRESH_TOKEN_SECRET=dev_refresh_token_secret

# ==================================================
# NextAuth (optional in dev)
# ==================================================
# Google auth is disabled by default in dev
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=

# ==================================================
# i18n (optional)
# ==================================================
# Only needed if pulling translations from i18nexus
I18NEXUS_API_KEY=

# ==================================================
# Safety guard
# ==================================================
# Must be explicitly set to allow destructive DB operations
ALLOW_DB_RESET=true